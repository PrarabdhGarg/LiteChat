<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.ProfileActivity"
        android:background="#000">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/CardViewOutermost"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="24dp"
            android:background="#efeae8"
    >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.6"
                    android:src="@drawable/suyash"
                    android:scaleType="fitXY"
                    android:id="@+id/ProfileImageView"
                    android:layout_height="0dp"/>

            <ImageButton
                    android:layout_width="0dp"
                    android:id="@+id/ProfileImageButtonChange"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.09"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_2"
                    android:background="#0000ffff"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="@id/guideline_1"
                    android:layout_height="0dp" android:src="@drawable/ic_picture"/>

            <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_4"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/guideline_3"
                    android:text="Prarabdh Garg"
                    android:id="@+id/NameTextView"
                    android:padding="12dp"
                    android:textAlignment="gravity"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.85"
                    android:id="@+id/AboutTextView"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintBottom_toTopOf="@+id/LinearLayoutButton"
                    app:layout_constraintTop_toBottomOf="@id/NameTextView"
                    android:padding="16dp"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:clickable="false"
                    android:lines="5"
                    android:editable="false"
                    android:background="@android:color/transparent"
                    android:inputType="none"
                    android:textAlignment="center"
                    android:text="Hello. I am Prarabdh Garg. I am currently a first year student at the Birla Institute of Science And Technlogy, persuing Computer Science. My hobbies include playing Counter Strike and coding"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="0dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:id="@+id/LinearLayoutButton"
                    android:background="@drawable/button_shape"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/AboutTextView"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/EditAboutButton"
                        android:textAlignment="center"
                        android:text="Edit Information"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/editImage"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_edit_black_24dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <android.support.constraint.Guideline
                    android:id="@+id/guideline_1"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.555"/>

            <android.support.constraint.Guideline
                    android:id="@+id/guideline_3"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.61"/>

            <android.support.constraint.Guideline
                    android:id="@+id/guideline_2"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05"/>

            <android.support.constraint.Guideline
                    android:id="@+id/guideline_4"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.15"/>
            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ProgressBarProfile"
                    android:visibility="invisible"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/ProfileImageView" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>