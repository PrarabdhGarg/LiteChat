<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/login_layout"
        tools:context=".view.activities.LoginActivity"
        android:background="@drawable/animation_list"
>

    <Button
            android:text="Verify"
            android:layout_width="263dp"
            android:layout_height="62dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/loginButton"
            android:background="@drawable/rounded" android:textSize="30sp" android:textColor="#8CA6DB"
            android:textStyle="bold" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/loginRetryButton"/>

    <Button
            android:text="Retry"
            android:layout_width="263dp"
            android:layout_height="62dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/loginRetryButton"
            android:background="@drawable/rounded" android:textSize="30sp" android:textColor="#8CA6DB"
            android:textStyle="bold" android:visibility="invisible" android:layout_marginBottom="60dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNewNumber"
            android:hint="Enter Phone Number"
            android:textAlignment="center"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="90dp" android:layout_marginRight="90dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextName" tools:text="9927374839" android:textSize="24sp"
            android:textStyle="bold" android:textColor="#2C0649"/>


    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/editTextName"
            android:hint="Enter Your Name"
            android:textAlignment="center"
            android:inputType="text"
            android:textSize="24sp"
            android:textColor="#2C0649"
            app:layout_constraintBottom_toTopOf="@+id/loginButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="90dp" android:layout_marginRight="90dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" android:layout_marginBottom="120dp" android:textStyle="bold"
            tools:text="Suyash Soni"/>

</android.support.constraint.ConstraintLayout>