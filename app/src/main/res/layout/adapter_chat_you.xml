<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="Suyash Soni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/youName"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/youMessage"
            app:layout_constraintBottom_toTopOf="@+id/youMessage" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/message_item_you"/>

    <TextView
            android:text="Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/youMessage"
            android:textSize="18sp"
            android:padding="16dp"
            android:textColor="#FFF"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/youName"
            android:layout_marginTop="4dp"
            android:background="@drawable/message_item_you"
    />

    <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/youImageShare"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/youName"
            android:layout_marginTop="4dp"
            android:src="@drawable/placeholder_image_sharing"
            android:visibility="invisible"
    />
</android.support.constraint.ConstraintLayout>
