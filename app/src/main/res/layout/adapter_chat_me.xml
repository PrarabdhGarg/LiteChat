<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myName"
            android:textSize="14sp"
            android:textColor="#000"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/myMessage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myMessage"
            android:background="@drawable/message_item_me" app:layout_constraintVertical_chainStyle="spread_inside"/>
    <TextView
            android:text="Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/myMessage"
            android:textSize="18sp"
            android:padding="16dp"
            android:paddingRight="0dp"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myName" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="4dp"
            android:background="@drawable/message_item_me"
    />

    <ImageView

            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/myImageShare"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myName" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="4dp"
            android:src="@drawable/akshat"
            android:visibility="invisible"
    />
</android.support.constraint.ConstraintLayout>